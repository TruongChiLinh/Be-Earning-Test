pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
            }
        }
        stage('Build') {
            steps {
                sh 'truffle compile'
            }
        }
        stage('Test') {
            steps {
                sh 'truffle test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'truffle migrate --network development'
            }
        }
    }
}
